{
    "compilerOptions": {
        "target": "ES2022",
        "module": "CommonJS",
        "moduleResolution": "node",

        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitOverride": true,

        "strict": true,

        "outDir": "./dist/",
        "declaration": true,
        "allowJs": true,
        "removeComments": false,

        "forceConsistentCasingInFileNames": true,

        "allowSyntheticDefaultImports": true
    },
    "include": [
        "./src/",
    ]
}